<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body{
            font-family: Arial, Helvetica, sans-serif;
            
        }

        .card{
            min-height: 200px;
            display: flex;
            width: 100%;
            padding: 0px 24px;
            max-width: 1120px;
            min-width: 1024px;
            margin: auto;
            align-items: flex-start;
        }

        .left-card{
            margin: 10px;
            padding: 12px;
            width: 800px;
            box-sizing: border-box;
            border-radius: 10px;
        }

        .right-card{
            position: -webkit-sticky;
            position: sticky;
            top: 70px;
            padding: 12px;
            box-shadow: 0 2px 8px 0 rgba(99, 99, 99, 0.2);
            transition: 0.3s;
            width: 200px;
            box-sizing: border-box;
            border-radius: 7px;
        }

        .check{
            display: flex;
            margin: 20px;
        }

        input{
            border: none;
        }

        
        input[type="number"] {
            -webkit-appearance: textfield;
            -moz-appearance: textfield;
            appearance: textfield;
        }

        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
        }

        .number-input {
            display: inline-flex;
        }

        .number-input,
        .number-input * {
            box-sizing: border-box;
        }

        .number-input button {
            outline:none;
            -webkit-appearance: none;
            border-style: solid;
            border-color: rgb(22, 111, 229);
            background-color: white;
            align-items: center;
            justify-content: center;
            width: 2rem;
            cursor: pointer;
            margin: 0;
            position: relative;
            padding:0;
            border-radius: 20px;
        }

        .number-input button:before,
        .number-input button:after {
            display: inline-block;
            position: absolute;
            content: '';
            width: 0.5rem;
            height: 2px;
            background-color: rgb(22, 111, 229);
            transform: translate(-50%, -50%);
        }
        .number-input button.plus:after {
            transform: translate(-50%, -50%) rotate(90deg);
        }

        .number-input input[type=number] {
            font-family: sans-serif;
            max-width: 2.5rem;
            padding: 0.5rem;
            border:0;
            text-align: center;
            outline:none;
        }
        .number-input{
            border-width:1px;
        }

        img{
            object-fit: cover;
            width: 100px;
            margin: 20px;
        }

        a{
            text-decoration: none;
            color: rgba(49, 53, 59, 0.68);
            padding: 7px;
            margin-left: 20px;
        }

        h3{
            color: #31353b;
            font-size: 20px;
            font-weight: 400;
        }

        .price{
            font-weight: 700;
        }
        
        .line{
            height: 3px;
            width: 100%;
            background-color: var(--N50,#F3F4F5);
            margin: 18px 0px;
        }

    </style>
</head>
<body>
    <% let totalBarang = 0 %> 
    <% let totalHarga = 0 %> 
    <div class="card">
        <div class="left-card">
            <h1 style="padding-left: 20px;">Keranjang Belanja</h1>
            <% for(let i = 0 ; i < data.length ; i++) {%>
                <div class="check">
                    <img src="<%= data[i].item.image %> " alt="">
                    <div class="container">
                        <% const total = data[i].total %> 
                        <h3> <%= data[i].item.name %> </h3>
                        <p class="price"><%= convertToRupiah(data[i].item.price)%></p>
                        <div class="number-input">
                            <button onclick="this.parentNode.querySelector('input[type=number]').stepDown()" ></button>
                            <input class="quantity bg-light" min="1" placeholder="1" name="quantity" value="<%-total%>" type="number">
                            <button onclick="this.parentNode.querySelector('input[type=number]').stepUp()" class="plus"></button>
                            <a href="/delete/<%= data[i].id %> ">hapus</a>
                        </div>
                        <% totalBarang += total %> 
                        <% totalHarga += total * data[i].item.price %> 
                    </div>
                </div>
                <div class="line"></div>
            <%}%>
        </div>
        <div class="right-card">
            <form method="post" action="/daftarTransaksi">
                <p>Total Harga (<%= totalBarang %> barang)</p><p><%= convertToRupiah(totalHarga) %></p>
                <button type="submit">bayar</button>
            </form>
        </div>
    </div>
</body>
</html>